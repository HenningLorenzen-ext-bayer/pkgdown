// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
{
	"name": "R (rocker/r-ver base)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ghcr.io/rocker-org/devcontainer/r-ver:4",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/r-dependent-packages:0": {
			"when": "postCreate",
			"pakVersion": "auto",
			"manifestRoot": ".",
			"additionalRepositories": "",
			"dependencyTypes": "all,Config/Needs/website"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
				"RDebugger.r-debugger",
				"redhat.vscode-yaml",
				"DavidAnson.vscode-markdownlint",
				"mhutchie.git-graph",
				"eamodio.gitlens"
			],
			"settings": {
				"gitlens.showWelcomeOnInstall": false,
				"gitlens.showWhatsNewAfterUpgrades": false,
				"gitlens.plusFeatures.enabled": false,
				"gitlens.cloudPatches.enabled": false,
				"gitlens.launchpad.indicator.enabled": false,
				"gitlens.ai.experimental.generateCommitMessage.enabled": false,
				"gitlens.telemetry.enabled": false				
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "R -q -e 'renv::install()'",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
