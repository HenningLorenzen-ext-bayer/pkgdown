// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
{
	"name": "R (rocker/r-ver base)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ghcr.io/rocker-org/devcontainer/r-ver:4",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/r-dependent-packages:0": {
			"when": "postCreate",
			"pakVersion": "auto",
			"manifestRoot": ".",
			"additionalRepositories": "",
			"dependencyTypes": "all,Config/Needs/website"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
				"RDebugger.r-debugger",
				"redhat.vscode-yaml",
				"DavidAnson.vscode-markdownlint",
				"mhutchie.git-graph",
				"eamodio.gitlens"
			],
			"settings": {
				"editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
				"editor.fontLigatures": true,
				"editor.renderWhitespace": "all",
				"editor.rulers": [
					80,
					{
						"column": 100,
						"color": "#ddaa00"
					},
					{
						"column": 120,
						"color": "#ff0000"
					}
				],
				"editor.tabSize": 2,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"git.autofetch": true,
				"git.inputValidation": true,
				"git.verboseCommit": true,
				"gitlens.ai.experimental.generateCommitMessage.enabled": false,
				"gitlens.cloudPatches.enabled": false,
				"gitlens.launchpad.indicator.enabled": false,
				"gitlens.plusFeatures.enabled": false,
				"gitlens.showWelcomeOnInstall": false,
				"gitlens.showWhatsNewAfterUpgrades": false,
				"gitlens.telemetry.enabled": false,
				"r.bracketedPaste": true,
				"r.plot.useHttpgd": true,
				"r.rterm.linux": "/usr/local/bin/radian",
				"redhat.telemetry.enabled": false
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "R -q -e 'renv::install()'",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
